@model IEnumerable<BugTracker_FridayNights.Models.TicketNotification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeneratedDt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ticket.Title)
        </td>
        <td>
            @Html.Raw(item.Detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GeneratedDt)
        </td>
        <td>
            @Html.ActionLink("Mark As Read", "MarkAsRead", "TicketNotifications", new { id = item.Id }, null) |
        </td>
    </tr>
}

</table>
