@model BugTracker_FridayNights.Models.Project

@{
    ViewBag.Title = "ReassignUser";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">The ADMIN DASHBOARD allows an Administrator to execute various functionality. In this case an Administrator (or PM) wants to REASSIGN users on a Project</p>
    <p>@Html.ActionLink("Main Page", "Index", "Home")
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Project Title: @Model.Name</h2>
        <p>
            Description:
            <br />
            <span>  @Model.Description</span>
        </p>
    </div>
</div>

<hr />

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
@Html.Hidden("ProjectId", Model.Id)
<div class="row">
    <div class="col-md-6">
        <h2>Reassign Users</h2>
        <p>Choose the User(s) you want from the available list. If you want to reassign multiple users press and hold <code>shift</code> while making your selections</p>
    </div>
    <div class="col-md-6">
        @Html.ListBox("ReAssignUsers", null, htmlAttributes: new { @class = "form-control" })
    </div>
</div>
<div class="row">
    <button type="submit" class="btn btn-primary">ReAssign</button>
</div>
}
