@model BugTracker_FridayNights.Models.Project

@{
    ViewBag.Title = "ReassignUserByRole";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">The ADMIN DASHBOARD allows an Administrator to execute various functionality. In this case an Administrator (or PM) wants to REASSIGN users on a Project by Role</p>
    <p>@Html.ActionLink("Main Page", "Index", "Home")
</div>

<div class="row">
    <div class="col-md-6">
        <h2><strong>Project Title:</strong> @Model.Name</h2>
        <p>
            <h3><strong>Description:</strong></h3>
            <h3>@Model.Description</h3>
        </p>
    </div>
</div>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("ProjectId", Model.Id)
    <div class="row">
        <div class="col-md-6">
            <h2>Reassign Developers</h2>
            <p>Choose the Developers you want from the available list. If you want to reassign multiple Developers press and hold <code>shift</code> while making your selections</p>
        </div>
        <div class="col-md-6">
            @Html.ListBox("ReassignDevs", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h2>Reassign Project Managers</h2>
            <p>Choose the Project Managers you want from the available list. If you want to reassign multiple Project Managers press and hold <code>shift</code> while making your selections</p>
        </div>
        <div class="col-md-6">
            <br />
            @Html.ListBox("ReassignPMs", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="row">
        <br />
        <button type="submit" class="btn btn-primary">ReAssign</button>
    </div>
}
